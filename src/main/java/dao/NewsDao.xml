<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dao.NewsDao">

    <select id="selectAllNewsByPage" parameterType="domain.Page" resultType="domain.News">
        select * from news order by date desc limit #{currentLine}, #{lineEachPage}
    </select>

    <select id="showLineNumber" resultType="java.lang.Integer">
        select count(*) from news
    </select>

    <select id="selectNewsByID" resultType="domain.News">
        select * from news where
        <choose>
            <when test="news_id != null">
                news_id = #{news_id}
            </when>
            <otherwise>
                1 = 2
            </otherwise>
        </choose>
    </select>

    <select id="selectRecentNews" resultType="domain.News">
        select * from news order by date desc limit 0,6
    </select>


</mapper>